{
	"segments": {
		"right": [
			{
				"function": "powerline.segments.common.mail.email_imap_alert",
				"before": "✉ ",
				"args": {
					"username": "<your-gmail-user>",
					"password": "<your-pass-user>"
				}
			},
			{
				"function": "powerline.segments.common.net.network_load",
				"args": {
					"si_prefix": true,
					"recv_format": "▼{value:>8} │",
					"sent_format": " ▲{value:>8}"
				}
			},
			{
				"function": "powerline.segments.common.wthr.weather",
				"args": {
					"interval": 10,
					"unit": "C",
					"location_query": "<your-query>",
					"temp_coldest": 25,
					"temp_hottest": 34,
					"icons": {
						"day": "〇",
						"blustery": "⚑",
						"rainy": "☔",
						"cloudy": "☁",
						"snowy": "❆",
						"sunny": "☼",
						"stormy": "⛈",
						"night": "☾"
					}
				}
			}
		]
	}
}
